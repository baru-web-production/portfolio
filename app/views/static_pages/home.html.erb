<!-- 新着記事 -->
<div class="new-article">
    <div class="new-article__title">
        <span class="new-article__title--line"></span>
        <h2 class="new-article__title--text">新着記事</h2>
        <span class="new-article__title--line"></span>
    </div>
    <div class="new-article__wrapper">
        <% unless @articles.empty? %>
            <% @articles.first(8).each do |article| %>
                <article class="article_items">
                    <div class="article_items__wrapper">
                        <time class="article_items__wrapper--time">
                            <%= time_ago_in_words(article.created_at)+"前" %>
                        </time>
                        <% if article.image? %>
                            <%= image_tag article.image.url, class: "article_items__wrapper--img" %>
                        <% else %>
                            <%= image_tag "article_details_no_img.jpg", class: "article_items__wrapper--img" %>
                        <% end %>
                        <%= image_tag "no_active_star.png", class: "article_items__wrapper--star" %>
                    </div>
                    <div class="article_items__text">
                        <h3 class="article_items__text--title">
                            <%= link_to article.title, "/profile/my_article_details", class: "article_items__text--title_hover" %>
                        </h3>
                        <p class="article_items__text--overview">
                            <%= article.content.truncate(60) %>
                        </p>
                        <%= link_to get_user(article).name, get_user(article), class: "article_items__text--name" %>
                        <%= link_to " / 高校#{get_grade(get_user(article))}年生", get_user(article), class: "article_items__text--name article_items__text--grade" %>
                    </div>
                </article>
            <% end %>
        <% end %>
    </div>
    <% unless @articles.empty? %>
        <%= button_tag "もっとみる", onclick: "location.href='/new_articles'", type: "button", class: "new-article__button" %>
    <% else %>
        <p class="new-article__text">記事はまだありません</p>
    <% end %>
</div>
<!-- cta -->
<div class="cta">
    <div class="cta__wrapper">
        <%= link_to new_article_path, class: "cta__items" do %>
            <%= image_tag "cta_icon_write", class: "cta__items--icon" %>
            <h2 class="cta__items--title">自分の記事を書く</h2>
            <p class="cta__items--text">自分の意見を発信してみよう</p>
        <% end %>
        <%= link_to articles_path, class: "cta__items" do %>
            <%= image_tag "cta_icon_read", class: "cta__items--icon" %>
            <h2 class="cta__items--title">もっと記事を読む</h2>
            <p class="cta__items--text">価値観をアップデートしよう</p>
        <% end %>
        <%= link_to "/favorite", class: "cta__items" do %>
            <%= image_tag "cta_icon_favorite", class: "cta__items--icon" %>
            <h2 class="cta__items--title">お気に入りを見る</h2>
            <p class="cta__items--text">お気に入りの記事を読み返そう</p>
        <% end %>
    </div>
</div>
