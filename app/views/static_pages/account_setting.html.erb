<!-- ヘッダー -->
<%= render 'render/header' %>

<!-- メイン -->
<main>
    <section class="account_setting">
        <%= image_tag "default_icon.jpg", class: "account_setting__icon" %>
        <h2 class="account_setting__title">アカウントの設定</h2>
        <form class="account_setting__form">
            <label for="name" class="account_setting__form--mark">名前</label>
            <input type="text" id="name" name="name" class="account_setting__form--input">
            <label for="grade" class="account_setting__form--mark">学年</label>
            <input type="number" id="grade" name="grade" class="account_setting__form--input">
            <label for="email" class="account_setting__form--mark">メールアドレス</label>
            <input type="mail" id="email" name="email" class="account_setting__form--input">
            <label for="password" class="account_setting__form--mark">パスワード</label>
            <input type="password" id="password" name="password" class="account_setting__form--input">
            <input type="submit" value="更新する" class="account_setting__form--button">
        </form>
        <a class="account_setting__forget">パスワードを忘れた方は<span class="account_setting__forget--blue">こちら</span></a>
    </section>
</main>

<!-- フッター -->
<%= render 'render/footer' %>