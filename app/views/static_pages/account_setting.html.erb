<!-- ヘッダー -->
<%= render 'render/header' %>

<!-- メイン -->
<main>
    <section class="setting">
        <div class="setting__wrapper">
        <div class="setting__icon">
            <%= image_tag "default_icon.jpg", class: "setting__icon--img" %>
            <a class="setting__edit">
                <%= image_tag "profile_edit.png", class: "setting__edit--img" %>
            </a>
        </div>
        <h2 class="setting__wrapper--title">アカウントの設定</h2>
        <form class="setting__form">
            <label for="name" class="setting__form--label">名前</label>
            <input type="text" id="name" name="name" class="setting__form--input">
            <label for="grade" class="setting__form--label">高校の学年</label>
            <input type="number" id="grade" name="grade" class="setting__form--input">
            <label for="email" class="setting__form--label">メールアドレス</label>
            <input type="mail" id="email" name="email" class="setting__form--input">
            <label for="password" class="setting__form--label">パスワード</label>
            <input type="password" id="password" name="password" class="setting__form--input">
            <input type="submit" value="更新する" class="setting__form--button">
        </form>
        <a class="setting__forget">パスワードを忘れた方は<span class="setting__forget--blue">こちら</span></a>
    </section>
</main>

<!-- フッター -->
<%= render 'render/footer' %>